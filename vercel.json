{
  "version": 2,
  "name": "gateway-dex",
  "framework": null,
  "buildCommand": "npm run prepare:ci && npm run build",
  "outputDirectory": "build",
  "installCommand": "yarn install",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "VERCEL": "1",
    "CI": "true"
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 